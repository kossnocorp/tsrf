{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
